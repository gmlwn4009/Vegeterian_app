<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/logo" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_dashgap"
                android:layout_margin="20dp"
                android:padding="30dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_no_profile"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="o6o4_님, 안녕하세요."
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:letterSpacing="-0.05"/>

                    <TextView
                        android:id="@+id/level_present"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="당신은 플렉시테리언이군요!"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:letterSpacing="-0.05"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>

                    <ImageView
                        android:id="@+id/level_img"
                        android:src="@drawable/level0"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="30dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/setLev"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rectangle_dashgap"
                    android:gravity="center"
                    android:letterSpacing="-0.05"
                    android:text="채식 단계 설정"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/change_nick"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rectangle_dashgap"
                    android:gravity="center"
                    android:letterSpacing="-0.05"
                    android:text="닉네임 변경"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:background="@color/ivory">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact\n홍익대학교 컴퓨터공학과\n장희주, 김선주, 이현정\ntell: 010-nnnn-nnnn\ne-mail: abcd@hongik.ac.kr "
                    android:textColor="@color/black"
                    android:letterSpacing="-0.05"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>